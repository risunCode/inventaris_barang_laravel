# ========================================
# SIBARANG - Production Environment Template
# Copy this file to .env and customize for your organization
# ========================================

# Application Configuration
APP_NAME="Your Organization Inventory System"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_PHP_ARTISAN_KEY_GENERATE
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Asia/Jakarta

# Database Configuration
# Options: MySQL, PostgreSQL, SQLite
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_inventory_db
DB_USERNAME=your_db_user
DB_PASSWORD=your_secure_password

# SQLite Alternative (for smaller deployments)
# DB_CONNECTION=sqlite
# DB_DATABASE=/path/to/database.sqlite

# Mail Configuration (for notifications)
MAIL_MAILER=smtp
MAIL_HOST=your-mail-server.com
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Organization Configuration
# Customize these values for your organization
APP_DISPLAY_NAME="Your Inventory System"
ORGANIZATION_NAME="Your Organization Name"
ORGANIZATION_SHORT_NAME="YOUR"
ORGANIZATION_ADDRESS="Your Complete Address"
ORGANIZATION_PHONE="+62-xxx-xxxx-xxxx"
ORGANIZATION_EMAIL="info@yourdomain.com"
ORGANIZATION_WEBSITE="https://yourdomain.com"

# Security Configuration
SECURITY_ENABLED=true
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_STORE=file
CACHE_PREFIX=sibarang

# Queue Configuration (optional, for background jobs)
QUEUE_CONNECTION=sync

# File Storage Configuration
FILESYSTEM_DISK=local

# Asset Configuration
ASSET_URL=

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Performance Optimization
APP_OPTIMIZE=true
CONFIG_CACHE=true
ROUTE_CACHE=true
VIEW_CACHE=true

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_DISK=local
BACKUP_SCHEDULE=0 2 * * *

# ========================================
# SCENARIO SPECIFIC CONFIGURATIONS
# ========================================

# === LOCAL DEVELOPMENT ===
# Uncomment for local development:
# APP_ENV=local
# APP_DEBUG=true
# APP_URL=http://localhost:8000
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_DATABASE=sibarang_local
# DB_USERNAME=root
# DB_PASSWORD=

# === SHARED HOSTING ===
# Uncomment for shared hosting:
# APP_URL=https://yourdomain.com/subfolder
# DB_HOST=localhost
# DB_DATABASE=yourdomain_inventory
# DB_USERNAME=yourdomain_user
# DB_PASSWORD=yourdomain_password
# CACHE_STORE=database

# === VPS/CLOUD SERVER ===
# Uncomment for VPS deployment:
# DB_HOST=your-db-host.com
# DB_DATABASE=your_production_db
# DB_USERNAME=your_prod_user
# DB_PASSWORD=your_secure_prod_password
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis

# === LARAVEL VALET ===
# Uncomment for Valet development:
# APP_ENV=local
# APP_DEBUG=true
# APP_URL=http://sibarang.test
# DB_HOST=127.0.0.1
# DB_DATABASE=sibarang_valet
# DB_USERNAME=root
# DB_PASSWORD=

# === DOCKER DEPLOYMENT ===
# Uncomment for Docker:
# DB_HOST=mysql
# DB_DATABASE=sibarang
# DB_USERNAME=sibarang
# DB_PASSWORD=secure_password
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis

# ========================================
# CUSTOMIZATION OPTIONS
# ========================================

# System Branding
SYSTEM_VERSION="1.0.0"
SYSTEM_DESCRIPTION="Custom Inventory Management System"
SYSTEM_LICENSE="Your License"

# Feature Flags
ENABLE_PWA=true
ENABLE_BARCODE_SCANNING=false
ENABLE_GPS_TRACKING=false
ENABLE_MULTI_LANGUAGE=false
ENABLE_API_ACCESS=false

# Currency & Localization
DEFAULT_CURRENCY=IDR
DATE_FORMAT=d F Y
TIME_FORMAT=H:i
DECIMAL_SEPARATOR=,
THOUSANDS_SEPARATOR=.

# Upload Limits
MAX_FILE_SIZE=10240    # KB (10MB)
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# PDF Configuration
PDF_PAPER_SIZE=A4
PDF_ORIENTATION=portrait
PDF_MARGIN_TOP=20
PDF_MARGIN_RIGHT=15
PDF_MARGIN_BOTTOM=20
PDF_MARGIN_LEFT=15

# Email Configuration
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_FROM_NAME="${ORGANIZATION_NAME}"
EMAIL_ADMIN="admin@yourdomain.com"

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
SESSION_TIMEOUT=120    # minutes
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=60    # seconds

# Performance Settings
ENABLE_QUERY_LOG=false
ENABLE_DEBUGBAR=false
ENABLE_TELESCOPE=false
ENABLE_CLOCKWORK=false

# API Configuration (if enabled)
API_RATE_LIMIT=1000    # requests per hour
API_TOKEN_EXPIRY=24    # hours
ENABLE_API_DOCS=false

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_INCLUDE_FILES=true
BACKUP_INCLUDE_DATABASE=true
BACKUP_COMPRESS=true

# ========================================
# DEPLOYMENT CHECKLIST
# ========================================

# Before deploying to production:
# 1. Generate new APP_KEY: php artisan key:generate
# 2. Set APP_DEBUG=false
# 3. Configure proper database credentials
# 4. Set up email configuration
# 5. Customize organization details
# 6. Set appropriate file permissions
# 7. Configure web server (Apache/Nginx)
# 8. Set up SSL certificate
# 9. Configure backup strategy
# 10. Test all functionality

# Post-deployment commands:
# php artisan config:cache
# php artisan route:cache
# php artisan view:cache
# php artisan storage:link
# php artisan migrate --force
